@model List<HouseTypes>

<h1 class="mb-4">Add New House</h1>

<form asp-action="Create">
    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" class="form-control" id="title" name="title" value="" required />
    </div>
    <div class="form-group">
        <label for="price">Price:</label>
        <input type="number" class="form-control" id="price" name="price" value="" required />
    </div>
    <div class="form-group">
        <label for="address">Address:</label>
        <input type="text" class="form-control" id="address" name="address" value="" required />
    </div>
    <div class="form-group">
        <label for="fromDate">From Date:</label>
        <input type="date" class="form-control" id="fromDate" name="fromDate" value="" required />
    </div>
    <div class="form-group">
        <label for="toDate">To Date:</label>
        <input type="date" class="form-control" id="toDate" name="toDate" value="" required />
    </div>
    <div class="form-group">
        <label for="TypeId">House Type:</label>
        <select class="form-control" id="TypeId" name="TypeId" required>
            @foreach (var type in Model)
            {
                <option value="@type.Id">@type.Title</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" class="form-control" id="description" name="description" value=""  />
    </div>
    <!-- Add more input fields as needed -->
    <button type="submit" class="btn btn-primary mt-4">Create</button>
     <a href="/House" class="btn btn-secondary mt-4">Cancel</a>
</form>