@model HousesEditDTO

<div class="container mt-5">
    <h1>Edit House</h1>

    <form asp-action="Edit" asp-route-id="@Model.Data.Id" method="post">
        <input type="hidden" name="OwnerId" value="@Model.Data.OwnerId" />
        <!-- Input Field for Title -->
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" name="title" value="@Model.Data.Title" required />
        </div>
        <!-- Input Field for Price -->
        <div class="form-group">
            <label for="price">Price:</label>
            <input type="number" class="form-control" id="price" name="price" value="@Model.Data.Price" required />
        </div>
        <!-- Input Field for Address -->
        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" class="form-control" id="address" name="address" value="@Model.Data.Address" required />
        </div>
        <!-- Input Fields for From Date and To Date (Date Pickers) -->
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="fromDate">From Date:</label>
                <input type="date" class="form-control" id="fromDate" name="fromDate" value="@Model.Data.FromDate.ToString("yyyy-MM-dd")" required />
            </div>
            <div class="form-group col-md-6">
                <label for="toDate">To Date:</label>
                <input type="date" class="form-control" id="toDate" name="toDate" value="@Model.Data.ToDate.ToString("yyyy-MM-dd")" required />
            </div>
        </div>
        <!-- Dropdown for House Type Selection -->
        <div class="form-group">
            <label for="houseType">House Type:</label>
            <select class="form-control" id="houseType" name="TypeId" required>
                <!-- Loop to populate dropdown options -->
                @foreach (var type in Model.Types)
                {
                    var selected = Model.Data.TypeId == type.Id;
                    <option selected="@selected" value="@type.Id">@type.Title</option>
                }
            </select>
        </div>
        <!-- Input Field for Description -->
        <div class="form-group">
            <label for="description">Description:</label>
            <input type="text" class="form-control" id="description" value="@Model.Data.Description" name="description" required />
        </div>
        <!-- Form Submission Button -->

        <button type="submit" class="btn btn-primary mt-4">Save</button>
         <a href="/House" class="btn btn-secondary mt-4">Cancel</a>
        @Html.ValidationSummary() <!-- Display Validation Summary If Any Input Errors Occur -->
    </form>
</div>
