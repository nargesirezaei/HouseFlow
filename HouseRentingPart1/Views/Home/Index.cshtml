@model List<HouseImagesViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-left">
    <div class="row">
        @foreach (var houseWithImages in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h5 class="card-title">@houseWithImages.House.Title</h5>
                    </div>
                </div>
                <div class="card-link">
                    <img src="data:image/png;base64,@houseWithImages.Image.ImageUrl" class="card-img-top house-img" alt="House Image">
                </div>
                <div class="card-footer">

                    <p class="card-text">
                        <span class="card-info"><i class="fa fa-solid fa-usd"></i> <b>Price:</b> </span> @houseWithImages.House.Price $
                    </p>
                    <p class="card-text">
                        <span class="card-info"><i class="fa fa-solid fa-bed"></i> <b>Type</b>: </span> @houseWithImages.House.TypeTitle
                    </p>
                    <a href="/House/Details/@houseWithImages.House.Id" class="btn btn-primary">View</a>
                </div>
            </div>
        }
    </div>
</div>